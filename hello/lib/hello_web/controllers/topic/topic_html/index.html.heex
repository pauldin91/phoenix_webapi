<.list>
  <:item title="Topics">
    <ul class="collection z-depth-1">
      <li :for={topic <- @topics} class="collection-item valign-wrapper">
        <div class="left">
          <.link navigate={~p"/#{topic.id}"}>
            <span class="grey-text text-darken-1"># {topic.id}</span>
            â€” <strong>{topic.title}</strong>
          </.link>
        </div>

        <%= if @conn.assigns.user.id == topic.user.id do %>
          <div class="right">
            <.link
              navigate={~p"/#{topic.id}/edit"}
              class="btn-small blue lighten-1 white-text waves-effect waves-light"
            >
              <i class="material-icons left">edit</i> Edit
            </.link>
            <.link
              href={~p"/#{topic.id}"}
              method="delete"
              class="btn-small red lighten-1 white-text waves-effect waves-light"
            >
              <i class="material-icons left">delete</i> Delete
            </.link>
          </div>
        <% end %>
      </li>
    </ul>
  </:item>
</.list>

<div class="fixed-action-btn">
  <.link navigate={~p"/new"} class="btn-floating btn-large waves-effect waves-light red">
    <i class="material-icons">add</i>
  </.link>
</div>
